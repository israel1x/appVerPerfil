<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutListTerapiasAnteriores">


    <TextView
        android:id="@+id/tvfechaTeraAnte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:ems="10"
        android:text="15 jul. 2017"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvterapistaTeraAnte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:ems="10"
        android:text="Daniel Garcia"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/tvcomentTeraAnte" />

    <TextView
        android:id="@+id/tvcomentTeraAnte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:ems="10"
        android:text="@string/parrafo_prueba"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/tvgallery" />

    <TextView
        android:id="@+id/tvgallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:ems="10"
        android:text="GALLERIA FOTOS"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>